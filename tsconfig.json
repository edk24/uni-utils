{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules"]
  }